@model IEnumerable<DentAssist.Web.Models.Paciente>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Pacientes";
    int _count = 0;
    foreach (var __p in Model) { _count++; }
}

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3"><i class="bi bi-people-fill text-primary me-2"></i>Pacientes</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i> Nuevo Paciente
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-3">
            @if (_count > 0)
            {
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Nombre</th>
                            <th>RUT</th>
                            <th>Teléfono</th>
                            <th>Email</th>
                            <th>Odontólogo</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var p in Model)
                        {
                            <tr>
                                <td>@p.Nombre @p.Apellido</td>
                                <td>@p.Rut</td>
                                <td>@p.Telefono</td>
                                <td>@p.Email</td>
                                <td>@p.Odontologo?.NombreCompleto</td>
                                <td class="text-end">
                                    <a asp-action="Edit" asp-route-id="@p.Id" class="btn btn-sm btn-outline-warning me-1">
                                        <i class="bi bi-pencil-fill"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@p.Id" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash-fill"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="text-center text-muted py-5">
                    <i class="bi bi-people text-muted display-1"></i>
                    <p class="mt-3">No hay pacientes registrados.</p>
                </div>
            }
        </div>
    </div>
</div>
