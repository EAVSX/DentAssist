@model DentAssist.Web.Models.Paciente
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Detalles de Paciente";
    Layout = "_Layout";
}

<div class="container py-4">
    <div class="row">
        <div class="col-12 mb-4">
            <h1 class="display-5">Detalles de Paciente</h1>
            <hr />
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-person-circle me-2"></i>
                        @Model.Nombre @Model.Apellido
                    </h4>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">RUT</dt>
                        <dd class="col-sm-8">@Model.Rut</dd>

                        <dt class="col-sm-4">Fecha de Nacimiento</dt>
                        <dd class="col-sm-8">@Model.FechaNacimiento.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-4">Teléfono</dt>
                        <dd class="col-sm-8">@Model.Telefono</dd>

                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">Dirección</dt>
                        <dd class="col-sm-8">@Model.Direccion</dd>
                    </dl>
                </div>
                <div class="card-footer bg-light d-flex justify-content-between align-items-center">
                    <a asp-controller="TratamientosRealizados"
                       asp-action="Index"
                       asp-route-pacienteId="@Model.Id"
                       class="btn btn-outline-primary">
                        <i class="bi bi-journal-medical me-1"></i>
                        Ver Historial de Tratamientos
                    </a>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                            <i class="bi bi-pencil-fill me-1"></i>Editar
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left-circle me-1"></i>Volver
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
