@model DentAssist.Web.Models.Paciente
@{
    ViewData["Title"] = "Eliminar Paciente";
}
<h1>Eliminar Paciente</h1>
<h3>¿Está seguro de que desea eliminar este paciente?</h3>
<div>
    <h4>Paciente</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt><dd class="col-sm-10">@Model.Nombre</dd>
        <dt class="col-sm-2">Apellido</dt><dd class="col-sm-10">@Model.Apellido</dd>
        <dt class="col-sm-2">RUT</dt><dd class="col-sm-10">@Model.Rut</dd>
        <dt class="col-sm-2">Dirección</dt><dd class="col-sm-10">@Model.Direccion</dd>
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
