@model List<DentAssist.Web.Models.TratamientoRealizado>
@{
    ViewData["Title"] = "Historial de Tratamientos";
    Layout = "_Layout";
    int pacienteId = (int)ViewData["PacienteId"];
}

<h2>Historial de Tratamientos</h2>
<p>
    <a asp-action="Create" asp-route-pacienteId="@pacienteId" class="btn btn-success">
        <i class="bi bi-plus-circle me-1"></i>Agregar Tratamiento
    </a>
    <a asp-controller="Pacientes" asp-action="Details" asp-route-id="@pacienteId" class="btn btn-secondary ms-2">
        <i class="bi bi-arrow-left-circle me-1"></i>Volver a Paciente
    </a>
</p>

<table class="table table-striped table-hover">
    <thead class="table-light">
        <tr>
            <th>Fecha</th>
            <th>Tratamiento</th>
            <th>Observaciones</th>
            <th class="text-end">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FechaRealizacion.ToString("dd/MM/yyyy")</td>
                <td>@item.TratamientoId</td> @* Puedes mostrar nombre si cargas navegación *@
                <td>@item.Observaciones</td>
                <td class="text-end">
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1">
                        <i class="bi bi-eye-fill"></i>
                    </a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">
                        <i class="bi bi-pencil-fill"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                        <i class="bi bi-trash-fill"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
