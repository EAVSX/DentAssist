@model DentAssist.Web.Models.RegisterViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Registro";
    Layout = "_Layout";
}

<div class="d-flex align-items-center justify-content-center vh-100 bg-light">
    <div class="card shadow-lg" style="max-width:400px; width:100%;">
        <div class="card-header bg-primary text-white text-center py-3">
            <h3 class="mb-0">
                <i class="bi bi-person-plus-fill me-2"></i>
                Regístrate en DentAssist
            </h3>
        </div>
        <div class="card-body p-4 bg-white">
            <form asp-action="Register" method="post">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Email" class="form-control" placeholder="Correo electrónico" />
                    <label asp-for="Email">
                        <i class="bi bi-envelope-fill me-1"></i>Email
                    </label>
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Password" type="password" class="form-control" placeholder="Contraseña" />
                    <label asp-for="Password">
                        <i class="bi bi-key-fill me-1"></i>Contraseña
                    </label>
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="form-floating mb-4">
                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirmar Contraseña" />
                    <label asp-for="ConfirmPassword">
                        <i class="bi bi-check2-circle me-1"></i>Confirmar Contraseña
                    </label>
                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="bi bi-person-check-fill me-1"></i>Registrarse
                    </button>
                </div>
            </form>
        </div>
        <div class="card-footer text-center py-3 bg-white">
            ¿Ya tienes cuenta?
            <a asp-action="Login" class="text-decoration-none">Inicia Sesión</a>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.14/dist/jquery.validate.unobtrusive.min.js"></script>
}
