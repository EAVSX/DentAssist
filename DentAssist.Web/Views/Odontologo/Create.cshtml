@model DentAssist.Web.Models.OdontologoViewModel

@{
    ViewData["Title"] = "Registrar Odontólogo";
}

<div class="container mt-5" style="max-width: 760px;">
    <div class="card shadow-sm">
        <div class="card-body p-4">
            <h2 class="mb-4 text-primary fw-bold">
                <i class="bi bi-person-badge-fill me-2"></i>
                Registrar Odontólogo
            </h2>
            <form asp-action="Create" method="post" autocomplete="off">
                <div class="row mb-3">
                    <div class="col">
                        <label asp-for="Nombre" class="form-label">Nombre</label>
                        <input asp-for="Nombre" class="form-control" placeholder="Ej: Javiera" />
                        <span asp-validation-for="Nombre" class="text-danger small"></span>
                    </div>
                    <div class="col">
                        <label asp-for="Apellido" class="form-label">Apellido</label>
                        <input asp-for="Apellido" class="form-control" placeholder="Ej: Marchant" />
                        <span asp-validation-for="Apellido" class="text-danger small"></span>
                    </div>
                </div>
                <div class="mb-3">
                    <label asp-for="Rut" class="form-label">RUT</label>
                    <input asp-for="Rut" class="form-control" placeholder="Ej: 21ef4542" />
                    <span asp-validation-for="Rut" class="text-danger small"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Especialidad" class="form-label">Especialidad</label>
                    <input asp-for="Especialidad" class="form-control" placeholder="Ej: Cirujano Dentista" />
                    <span asp-validation-for="Especialidad" class="text-danger small"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Direccion" class="form-label">Dirección</label>
                    <input asp-for="Direccion" class="form-control" placeholder="Ej: Calle 123" />
                    <span asp-validation-for="Direccion" class="text-danger small"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Telefono" class="form-label">Teléfono</label>
                    <input asp-for="Telefono" class="form-control" placeholder="Ej: +56912345678" />
                    <span asp-validation-for="Telefono" class="text-danger small"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Correo electrónico</label>
                    <input asp-for="Email" class="form-control" placeholder="ejemplo@dentassist.cl" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>
                <div class="row mb-4">
                    <div class="col">
                        <label asp-for="Password" class="form-label">Contraseña</label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Contraseña temporal" autocomplete="new-password" />
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>
                    <div class="col">
                        <label asp-for="ConfirmPassword" class="form-label">Confirmar contraseña</label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" autocomplete="new-password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                    </div>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                    <button type="submit" class="btn btn-primary px-4 fw-bold">
                        <i class="bi bi-save me-1"></i> Guardar
                    </button>
                    <a asp-action="Index" class="btn btn-link">Volver</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
