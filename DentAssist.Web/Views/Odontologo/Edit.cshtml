@model DentAssist.Web.Models.OdontologoViewModel

@{
    ViewBag.Title = "Editar Odontólogo";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5 mb-5" style="max-width: 600px;">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white text-center rounded-top">
            <h3 class="mb-0"><i class="bi bi-pencil-square"></i> Editar Odontólogo</h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post" autocomplete="off">
                <input type="hidden" asp-for="Id" />
                
                <div class="mb-3">
                    <label asp-for="Nombre" class="form-label fw-bold">Nombre</label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Rut" class="form-label fw-bold">RUT</label>
                    <input asp-for="Rut" class="form-control" />
                    <span asp-validation-for="Rut" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Especialidad" class="form-label fw-bold">Especialidad</label>
                    <input asp-for="Especialidad" class="form-control" />
                    <span asp-validation-for="Especialidad" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-bold">Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save"></i> Guardar Cambios
                    </button>
                    <a href="@Url.Action("Index", "Odontologo")" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
