@model DentAssist.Web.Models.EditRolesViewModel

@{
    ViewData["Title"] = "Editar Roles";
    Layout = "_Layout";
}

<h2>Editar Roles de @Model.Email</h2>

<form asp-area="Admin" asp-controller="AdminUsers" asp-action="EditRoles" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="UserId" />

    <div class="list-group mb-3">
        @for (int i = 0; i < Model.Roles.Count; i++)
        {
            <label class="list-group-item d-flex justify-content-between align-items-center">
                @Model.Roles[i].RoleName
                <input asp-for="Roles[@i].IsSelected" />
                <input type="hidden" asp-for="Roles[@i].RoleName" />
            </label>
        }
    </div>

    <button type="submit" class="btn btn-success">Guardar Roles</button>
    <a asp-area="Admin" asp-controller="AdminUsers" asp-action="Index" class="btn btn-secondary ms-2">Volver</a>
</form>
