@using DentAssist.Models
@model IEnumerable<Tratamiento>
@{
    ViewData["Title"] = "Tratamientos";
}

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">
            <i class="bi bi-tools me-2"></i>@ViewData["Title"]
        </h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i>Nuevo Tratamiento
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-3">
            @if (Model.Any())
            {
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Nombre</th>
                            <th>Descripción</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var t in Model)
                        {
                            <tr>
                                <td>@t.Id</td>
                                <td>@t.Nombre</td>
                                <td>@t.Descripcion</td>
                                <td class="text-end">
                                    <a asp-action="Edit" asp-route-id="@t.Id" class="btn btn-sm btn-outline-warning me-1">
                                        <i class="bi bi-pencil-fill"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@t.Id" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash-fill"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="text-center text-muted py-5">
                    <i class="bi bi-tools display-1"></i>
                    <p class="mt-3">No hay tratamientos registrados.</p>
                </div>
            }
        </div>
    </div>
</div>
