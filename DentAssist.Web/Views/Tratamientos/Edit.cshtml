@model DentAssist.Models.Tratamiento

@{
    ViewBag.Title = "Editar Tratamiento";
}

<style>
    .formulario {
        width: 370px;
        margin: 38px auto 0 auto;
        padding: 32px 32px 28px 32px;
        border: 1px solid #e9ecef;
        border-radius: 13px;
        background-color: #fafbfc;
        box-shadow: 0 2px 12px rgba(30,40,90,0.08);
    }

        .formulario label {
            display: block;
            font-weight: bold;
            margin-top: 15px;
            margin-bottom: 3px;
            text-align: left;
        }

        .formulario input[type="text"],
        .formulario input[type="number"] {
            width: 100%;
            padding: 8px 9px;
            margin-bottom: 2px;
            border: 1px solid #b8bfc7;
            border-radius: 6px;
            font-size: 15px;
            background-color: #fff;
        }

        .formulario span.field-validation-error {
            color: #b3261e;
            font-size: 12px;
            margin-bottom: 0;
            display: block;
        }

    .btn-guardar {
        margin-top: 24px;
        padding: 10px 28px;
        background-color: #198754;
        color: #fff;
        border: none;
        border-radius: 6px;
        font-size: 16px;
        cursor: pointer;
        font-weight: bold;
        box-shadow: 0 2px 7px rgba(20,40,60,0.08);
    }

        .btn-guardar:hover {
            background-color: #15613c;
        }

    .volver-link {
        margin-left: 18px;
        text-decoration: none;
        color: #0366d6;
        font-size: 15px;
        font-weight: 600;
    }

        .volver-link:hover {
            text-decoration: underline;
        }

    h2 {
        text-align: center;
        margin-top: 45px;
        margin-bottom: 24px;
        font-size: 2rem;
        font-weight: 800;
        letter-spacing: 1px;
        color: #23232b;
    }
</style>

<h2>Editar Tratamiento</h2>

<div class="formulario">
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <label>Nombre:</label>
        <input asp-for="Nombre" type="text" autocomplete="off" />
        <span asp-validation-for="Nombre" class="field-validation-error"></span>

        <label>Descripción:</label>
        <input asp-for="Descripcion" type="text" autocomplete="off" />
        <span asp-validation-for="Descripcion" class="field-validation-error"></span>

        <label>Precio:</label>
        <input asp-for="Precio" type="number" step="0.01" min="0" autocomplete="off" />
        <span asp-validation-for="Precio" class="field-validation-error"></span>

        <button class="btn-guardar" type="submit">Guardar</button>
        <a asp-action="Index" class="volver-link">Volver</a>
    </form>
</div>
